	<!--________________FahrtBewerten page___________________________________________________-->
	<servlet>
		<servlet-name>FahrtBewerten_servlet</servlet-name>
		<servlet-class>de.unidue.inf.is.FahrtBewertenServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>FahrtBewerten_servlet</servlet-name>
		<url-pattern>/FahrtBewerten</url-pattern>
	</servlet-mapping>
	<!--________________FahrtErstellen page___________________________________________________-->
	<servlet>
		<servlet-name>FahrtErstellen_servlet</servlet-name>
		<servlet-class>de.unidue.inf.is.FahrtErstellenServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>FahrtErstellen_servlet</servlet-name>
		<url-pattern>/FahrtErstellen</url-pattern>
	</servlet-mapping>
	<!--________________FahrtSuche page___________________________________________________-->
	<servlet>
		<servlet-name>FahrtSuche_servlet</servlet-name>
		<servlet-class>de.unidue.inf.is.FahrtSucheServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>FahrtSuche_servlet</servlet-name>
		<url-pattern>/FahrtSuche</url-pattern>
	</servlet-mapping>
	<!--________________BestDriver page___________________________________________________-->
	<servlet>
		<servlet-name>BestDriver_servlet</servlet-name>
